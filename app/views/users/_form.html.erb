<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <b>Join Now</b> and reserve your username
  <hr>
  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, placeholder: 'First Name', label: false %>
    <%= f.input :last_name, required: true, placeholder: 'Last Name', label: false %>
    <%= f.input :username, required: true, placeholder: 'Username', label: false %>
    <%= f.input :email, required: true, placeholder: 'email@domain.com', label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Sign up for Helyum', style: 'background-color:skyblue;' %>
  </div>
<% end %>