<%= simple_form_for(@email) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, required: true, placeholder: 'email@domain.com', label: false %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, style: 'background-color: rgb(41, 207, 163);' %>
  </div>
<% end %>